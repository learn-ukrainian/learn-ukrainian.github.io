{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://learn-ukrainian.github.io/schemas/activities-lit.schema.json",
  "title": "LIT Track Module Activities",
  "description": "Activity schema for Literature track modules (post-C1 specialization) with literary analysis requirements: quiz questions (20-40 words) on literary concepts, unjumble sentences (15-30 words) from literary texts, textual interpretation, historical-literary context, highest density.",
  "type": "array",
  "minItems": 14,
  "items": {
    "oneOf": [
      {
        "$ref": "#/definitions/quiz-lit"
      },
      {
        "$ref": "#/definitions/match-up-lit"
      },
      {
        "$ref": "#/definitions/fill-in-lit"
      },
      {
        "$ref": "#/definitions/group-sort-lit"
      },
      {
        "$ref": "#/definitions/unjumble-lit"
      },
      {
        "$ref": "#/definitions/true-false-lit"
      },
      {
        "$ref": "#/definitions/cloze-lit"
      },
      {
        "$ref": "#/definitions/error-correction-lit"
      },
      {
        "$ref": "#/definitions/mark-the-words-lit"
      },
      {
        "$ref": "#/definitions/select-lit"
      },
      {
        "$ref": "#/definitions/translate-lit"
      },
      {
        "$ref": "#/definitions/essay-response-lit"
      },
      {
        "$ref": "#/definitions/critical-analysis-lit"
      },
      {
        "$ref": "#/definitions/comparative-study-lit"
      },
      {
        "$ref": "#/definitions/authorial-intent-lit"
      },
      {
        "$ref": "#/definitions/reading-lit"
      }
    ]
  },
  "definitions": {
    "quiz-lit": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "quiz"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 14,
          "items": {
            "type": "object",
            "required": [
              "question",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "question": {
                "type": "string",
                "minLength": 1,
                "description": "Question should be 20-40 words for LIT literary analysis (themes, motifs, literary movements, authorial style)"
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "object",
                  "required": [
                    "text",
                    "correct"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "text": {
                      "type": "string",
                      "minLength": 1
                    },
                    "correct": {
                      "type": "boolean"
                    }
                  }
                }
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        }
      }
    },
    "match-up-lit": {
      "type": "object",
      "required": [
        "type",
        "title",
        "pairs"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "match-up"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "pairs": {
          "type": "array",
          "minItems": 12,
          "items": {
            "type": "object",
            "required": [
              "left",
              "right"
            ],
            "additionalProperties": false,
            "properties": {
              "left": {
                "type": "string",
                "minLength": 1,
                "description": "LIT pairs should match literary terms, quotations, authors, periods, or critical concepts"
              },
              "right": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "fill-in-lit": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "fill-in"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "items": {
          "type": "array",
          "minItems": 12,
          "items": {
            "type": "object",
            "required": [
              "sentence",
              "answer",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "sentence": {
                "type": "string",
                "minLength": 1,
                "description": "LIT sentences should use literary vocabulary, quotations, or critical analysis language"
              },
              "answer": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "group-sort-lit": {
      "type": "object",
      "required": [
        "type",
        "title",
        "groups"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "group-sort"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "groups": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "required": [
              "name",
              "items"
            ],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "description": "LIT groups could be literary periods, genres, movements, or thematic categories"
              },
              "items": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "unjumble-lit": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "unjumble"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 10,
          "items": {
            "type": "object",
            "required": [
              "words",
              "answer"
            ],
            "additionalProperties": false,
            "properties": {
              "words": {
                "type": "array",
                "minItems": 15,
                "maxItems": 30,
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "description": "LIT unjumble requires 15-30 words per sentence for literary prose complexity and classical syntax"
              },
              "answer": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        }
      }
    },
    "true-false-lit": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "true-false"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "items": {
          "type": "array",
          "minItems": 12,
          "items": {
            "type": "object",
            "required": [
              "statement",
              "correct"
            ],
            "additionalProperties": false,
            "properties": {
              "statement": {
                "type": "string",
                "minLength": 1,
                "description": "LIT statements should test literary interpretation, historical context, or thematic understanding"
              },
              "correct": {
                "type": "boolean"
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "cloze-lit": {
      "type": "object",
      "required": [
        "type",
        "title",
        "passage"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "cloze"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "passage": {
          "type": "string",
          "minLength": 1,
          "description": "LIT passages should be excerpts from classical Ukrainian literature with rich literary vocabulary"
        },
        "blanks": {
          "type": "array",
          "minItems": 22,
          "items": {
            "type": "object",
            "required": [
              "id",
              "answer",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "integer",
                "minimum": 1
              },
              "answer": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        }
      }
    },
    "error-correction-lit": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "error-correction"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "items": {
          "type": "array",
          "minItems": 10,
          "items": {
            "type": "object",
            "required": [
              "sentence",
              "error",
              "answer",
              "options",
              "explanation"
            ],
            "additionalProperties": false,
            "properties": {
              "sentence": {
                "type": "string",
                "minLength": 1,
                "description": "LIT error correction should target literary language, stylistic choices, or classical grammar"
              },
              "error": {
                "type": "string",
                "minLength": 1
              },
              "answer": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "explanation": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "mark-the-words-lit": {
      "type": "object",
      "required": [
        "type",
        "title",
        "instruction",
        "text"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "mark-the-words"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "instruction": {
          "type": "string",
          "minLength": 1,
          "description": "LIT tasks should identify literary devices, symbolic language, rhetorical figures, or key thematic words"
        },
        "text": {
          "type": "string",
          "minLength": 1
        },
        "answers": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "select-lit": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "select"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 10,
          "items": {
            "type": "object",
            "required": [
              "question",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "question": {
                "type": "string",
                "minLength": 1,
                "description": "LIT select questions should test multi-layered literary interpretation and analysis"
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 6,
                "items": {
                  "type": "object",
                  "required": [
                    "text",
                    "correct"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "text": {
                      "type": "string",
                      "minLength": 1
                    },
                    "correct": {
                      "type": "boolean"
                    }
                  }
                }
              },
              "min_correct": {
                "type": "integer",
                "minimum": 2
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        }
      }
    },
    "translate-lit": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "translate"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 10,
          "items": {
            "type": "object",
            "required": [
              "source",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "source": {
                "type": "string",
                "minLength": 1,
                "description": "LIT translation should involve classical Ukrainian literary texts with period-appropriate vocabulary"
              },
              "options": {
                "type": "array",
                "minItems": 3,
                "maxItems": 4,
                "items": {
                  "type": "object",
                  "required": [
                    "text",
                    "correct"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "text": {
                      "type": "string",
                      "minLength": 1
                    },
                    "correct": {
                      "type": "boolean"
                    }
                  }
                }
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        }
      }
    },
    "essay-response-lit": {
      "type": "object",
      "description": "Literary analysis essay requiring deep textual interpretation, thematic analysis, and historical-literary context",
      "required": [
        "type",
        "title",
        "prompt",
        "model_answer"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "essay-response"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "prompt": {
          "type": "string",
          "minLength": 10,
          "description": "LIT prompts should require sophisticated literary analysis of themes, motifs, style, or cultural context"
        },
        "min_words": {
          "type": "integer",
          "minimum": 300
        },
        "model_answer": {
          "type": "string",
          "minLength": 200,
          "description": "Model answer should demonstrate expert literary analysis using critical terminology and textual evidence"
        },
        "rubric": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "criteria",
              "description"
            ],
            "additionalProperties": false,
            "properties": {
              "criteria": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "minLength": 1
              },
              "points": {
                "type": "integer"
              }
            }
          }
        },
        "peer_review_guidelines": {
          "type": "string"
        }
      }
    },
    "critical-analysis-lit": {
      "type": "object",
      "description": "Deep literary analysis requiring sophisticated interpretation of texts, themes, literary devices, and cultural-historical context",
      "required": [
        "type",
        "title",
        "target_text",
        "questions",
        "model_answers"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "critical-analysis"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "target_text": {
          "type": "string",
          "description": "Classical Ukrainian literary text or critical excerpt for analysis"
        },
        "questions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "model_answers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "focus_points": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Literary analytical dimensions (symbolism, narrative technique, intertextuality, authorial voice)"
        }
      }
    },
    "comparative-study-lit": {
      "type": "object",
      "description": "Sophisticated comparison of literary texts, authors, periods, or movements",
      "required": [
        "type",
        "title",
        "items_to_compare",
        "criteria",
        "model_answer"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "comparative-study"
        },
        "id": {
          "type": "string",
          "description": "Unique identifier for the activity"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items_to_compare": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "string"
          },
          "description": "Literary works, authors, or periods for comparison"
        },
        "criteria": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          },
          "description": "Analytical dimensions (style, theme, historical context, literary movement)"
        },
        "prompt": {
          "type": "string"
        },
        "model_answer": {
          "type": "string"
        }
      }
    },
    "authorial-intent-lit": {
      "type": "object",
      "description": "Analysis of authorial purpose, literary techniques, and rhetorical strategies in Ukrainian literature",
      "required": [
        "type",
        "title",
        "text_excerpt",
        "prompt",
        "model_answer"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "authorial-intent"
        },
        "id": {
          "type": "string",
          "description": "Unique identifier for the activity"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "text_excerpt": {
          "type": "string",
          "description": "Excerpt from classical Ukrainian literature"
        },
        "prompt": {
          "type": "string"
        },
        "techniques_to_identify": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Literary devices (metaphor, irony, allegory, symbolism, narrative perspective)"
        },
        "model_answer": {
          "type": "string"
        }
      }
    },
    "reading-lit": {
      "type": "object",
      "description": "Reading comprehension with authentic classical Ukrainian literary texts",
      "required": [
        "type",
        "title",
        "resource",
        "tasks"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "reading"
        },
        "id": {
          "type": "string",
          "description": "Unique identifier for the activity"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "resource": {
          "type": "object",
          "required": [
            "type",
            "url",
            "title"
          ],
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "description": "Classical literary work, poetry collection, critical essay, literary journal"
            },
            "url": {
              "type": "string"
            },
            "title": {
              "type": "string"
            }
          }
        },
        "tasks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
