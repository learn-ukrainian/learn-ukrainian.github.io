{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://learn-ukrainian.github.io/schemas/activities-a2.schema.json",
  "title": "A2 Module Activities",
  "description": "Activity schema for A2 level modules. No anagram. Adds cloze, error-correction, mark-the-words. Select/translate optional.",
  "type": "array",
  "minItems": 10,
  "items": {
    "oneOf": [
      {
        "$ref": "#/definitions/quiz-a2"
      },
      {
        "$ref": "#/definitions/match-up-a2"
      },
      {
        "$ref": "#/definitions/fill-in-a2"
      },
      {
        "$ref": "#/definitions/group-sort-a2"
      },
      {
        "$ref": "#/definitions/unjumble-a2"
      },
      {
        "$ref": "#/definitions/true-false-a2"
      },
      {
        "$ref": "#/definitions/cloze-a2"
      },
      {
        "$ref": "#/definitions/error-correction-a2"
      },
      {
        "$ref": "#/definitions/mark-the-words-a2"
      },
      {
        "$ref": "#/definitions/select-a2"
      },
      {
        "$ref": "#/definitions/translate-a2"
      }
    ]
  },
  "definitions": {
    "quiz-a2": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "quiz"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 8,
          "items": {
            "type": "object",
            "required": [
              "question",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "question": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "object",
                  "required": [
                    "text",
                    "correct"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "text": {
                      "type": "string",
                      "minLength": 1
                    },
                    "correct": {
                      "type": "boolean"
                    }
                  }
                }
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        }
      }
    },
    "match-up-a2": {
      "type": "object",
      "required": [
        "type",
        "title",
        "pairs"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "match-up"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "pairs": {
          "type": "array",
          "minItems": 8,
          "items": {
            "type": "object",
            "required": [
              "left",
              "right"
            ],
            "additionalProperties": false,
            "properties": {
              "left": {
                "type": "string",
                "minLength": 1
              },
              "right": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "fill-in-a2": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "fill-in"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 8,
          "items": {
            "type": "object",
            "required": [
              "sentence",
              "answer",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "sentence": {
                "type": "string",
                "minLength": 1
              },
              "answer": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "group-sort-a2": {
      "type": "object",
      "required": [
        "type",
        "title",
        "groups"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "group-sort"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "groups": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "required": [
              "name",
              "items"
            ],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "items": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "unjumble-a2": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "unjumble"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 6,
          "items": {
            "type": "object",
            "required": [
              "words",
              "answer"
            ],
            "additionalProperties": false,
            "properties": {
              "words": {
                "type": "array",
                "minItems": 3,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "answer": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        }
      }
    },
    "true-false-a2": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "true-false"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 8,
          "items": {
            "type": "object",
            "required": [
              "statement",
              "correct"
            ],
            "additionalProperties": false,
            "properties": {
              "statement": {
                "type": "string",
                "minLength": 1
              },
              "correct": {
                "type": "boolean"
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "cloze-a2": {
      "type": "object",
      "required": [
        "type",
        "title",
        "passage"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "cloze"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "passage": {
          "type": "string",
          "minLength": 1
        },
        "blanks": {
          "type": "array",
          "minItems": 10,
          "items": {
            "type": "object",
            "required": [
              "id",
              "answer",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "integer",
                "minimum": 1
              },
              "answer": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        }
      }
    },
    "error-correction-a2": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "error-correction"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 6,
          "items": {
            "type": "object",
            "required": [
              "sentence",
              "error",
              "answer",
              "options",
              "explanation"
            ],
            "additionalProperties": false,
            "properties": {
              "sentence": {
                "type": "string",
                "minLength": 1
              },
              "error": {
                "type": "string",
                "minLength": 1
              },
              "answer": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "explanation": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "mark-the-words-a2": {
      "type": "object",
      "required": [
        "type",
        "title",
        "instruction",
        "passage",
        "correct_words"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "mark-the-words"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "instruction": {
          "type": "string",
          "minLength": 1
        },
        "passage": {
          "type": "string",
          "minLength": 1
        },
        "correct_words": {
          "type": "array",
          "minItems": 6,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "select-a2": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "select"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 6,
          "items": {
            "type": "object",
            "required": [
              "question",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "question": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 6,
                "items": {
                  "type": "object",
                  "required": [
                    "text",
                    "correct"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "text": {
                      "type": "string",
                      "minLength": 1
                    },
                    "correct": {
                      "type": "boolean"
                    }
                  }
                }
              },
              "min_correct": {
                "type": "integer",
                "minimum": 2
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        }
      }
    },
    "translate-a2": {
      "type": "object",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "translate"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 6,
          "items": {
            "type": "object",
            "required": [
              "source",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "source": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 3,
                "maxItems": 4,
                "items": {
                  "type": "object",
                  "required": [
                    "text",
                    "correct"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "text": {
                      "type": "string",
                      "minLength": 1
                    },
                    "correct": {
                      "type": "boolean"
                    }
                  }
                }
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        }
      }
    }
  }
}