{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://learn-ukrainian.github.io/schemas/activities-base.schema.json",
  "title": "Activity Definitions (Base)",
  "description": "Shared activity type definitions. Level-specific schemas reference these.",

  "definitions": {
    "quiz": {
      "type": "object",
      "description": "Multiple choice - single correct answer",
      "required": ["type", "title", "items"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "quiz" },
        "title": { "type": "string", "minLength": 1 },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["question", "options"],
            "additionalProperties": false,
            "properties": {
              "question": { "type": "string", "minLength": 1 },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "object",
                  "required": ["text", "correct"],
                  "additionalProperties": false,
                  "properties": {
                    "text": { "type": "string", "minLength": 1 },
                    "correct": { "type": "boolean" }
                  }
                }
              },
              "explanation": { "type": "string" }
            }
          }
        }
      }
    },

    "select": {
      "type": "object",
      "description": "Multiple choice - multiple correct answers",
      "required": ["type", "title", "items"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "select" },
        "title": { "type": "string", "minLength": 1 },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["question", "options"],
            "additionalProperties": false,
            "properties": {
              "question": { "type": "string", "minLength": 1 },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 6,
                "items": {
                  "type": "object",
                  "required": ["text", "correct"],
                  "additionalProperties": false,
                  "properties": {
                    "text": { "type": "string", "minLength": 1 },
                    "correct": { "type": "boolean" }
                  }
                }
              },
              "min_correct": { "type": "integer", "minimum": 2 },
              "explanation": { "type": "string" }
            }
          }
        }
      }
    },

    "true-false": {
      "type": "object",
      "description": "Statement validation - true or false",
      "required": ["type", "title", "items"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "true-false" },
        "title": { "type": "string", "minLength": 1 },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["statement", "correct"],
            "additionalProperties": false,
            "properties": {
              "statement": { "type": "string", "minLength": 1 },
              "correct": { "type": "boolean" },
              "explanation": { "type": "string" }
            }
          }
        }
      }
    },

    "fill-in": {
      "type": "object",
      "description": "Gap fill with dropdown options",
      "required": ["type", "title", "items"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "fill-in" },
        "title": { "type": "string", "minLength": 1 },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["sentence", "answer", "options"],
            "additionalProperties": false,
            "properties": {
              "sentence": {
                "type": "string",
                "minLength": 1,
                "description": "Sentence with ___ marking the blank"
              },
              "answer": { "type": "string", "minLength": 1 },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": { "type": "string", "minLength": 1 }
              },
              "explanation": { "type": "string" }
            }
          }
        }
      }
    },

    "cloze": {
      "type": "object",
      "description": "Passage with multiple blanks",
      "required": ["type", "title", "passage", "blanks"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "cloze" },
        "title": { "type": "string", "minLength": 1 },
        "passage": {
          "type": "string",
          "minLength": 1,
          "description": "Text with {1}, {2}, etc. marking blanks"
        },
        "blanks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "answer", "options"],
            "additionalProperties": false,
            "properties": {
              "id": { "type": "integer", "minimum": 1 },
              "answer": { "type": "string", "minLength": 1 },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": { "type": "string", "minLength": 1 }
              }
            }
          }
        }
      }
    },

    "match-up": {
      "type": "object",
      "description": "Match pairs (left to right)",
      "required": ["type", "title", "pairs"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "match-up" },
        "title": { "type": "string", "minLength": 1 },
        "pairs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["left", "right"],
            "additionalProperties": false,
            "properties": {
              "left": { "type": "string", "minLength": 1 },
              "right": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },

    "group-sort": {
      "type": "object",
      "description": "Sort items into categories",
      "required": ["type", "title", "groups"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "group-sort" },
        "title": { "type": "string", "minLength": 1 },
        "groups": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "required": ["name", "items"],
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "items": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              }
            }
          }
        }
      }
    },

    "unjumble": {
      "type": "object",
      "description": "Reorder words into correct sentence",
      "required": ["type", "title", "items"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "unjumble" },
        "title": { "type": "string", "minLength": 1 },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["words", "answer"],
            "additionalProperties": false,
            "properties": {
              "words": {
                "type": "array",
                "minItems": 3,
                "items": { "type": "string", "minLength": 1 }
              },
              "answer": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },

    "error-correction": {
      "type": "object",
      "description": "Find and fix grammatical errors",
      "required": ["type", "title", "items"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "error-correction" },
        "title": { "type": "string", "minLength": 1 },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["sentence", "error", "answer", "options", "explanation"],
            "additionalProperties": false,
            "properties": {
              "sentence": { "type": "string", "minLength": 1 },
              "error": {
                "type": "string",
                "minLength": 1,
                "description": "The incorrect word in the sentence"
              },
              "answer": {
                "type": "string",
                "minLength": 1,
                "description": "The correct word"
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": { "type": "string", "minLength": 1 }
              },
              "explanation": {
                "type": "string",
                "minLength": 1,
                "description": "Why the error is wrong and the answer is correct"
              }
            }
          }
        }
      }
    },

    "mark-the-words": {
      "type": "object",
      "description": "Click/mark words matching criteria in passage",
      "required": ["type", "title", "instruction", "passage", "correct_words"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "mark-the-words" },
        "title": { "type": "string", "minLength": 1 },
        "instruction": {
          "type": "string",
          "minLength": 1,
          "description": "What words to mark (e.g., 'Mark all nouns')"
        },
        "passage": { "type": "string", "minLength": 1 },
        "correct_words": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },

    "translate": {
      "type": "object",
      "description": "Translation multiple choice",
      "required": ["type", "title", "items"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "translate" },
        "title": { "type": "string", "minLength": 1 },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["source", "options"],
            "additionalProperties": false,
            "properties": {
              "source": {
                "type": "string",
                "minLength": 1,
                "description": "Text to translate (usually English)"
              },
              "options": {
                "type": "array",
                "minItems": 3,
                "maxItems": 4,
                "items": {
                  "type": "object",
                  "required": ["text", "correct"],
                  "additionalProperties": false,
                  "properties": {
                    "text": { "type": "string", "minLength": 1 },
                    "correct": { "type": "boolean" }
                  }
                }
              },
              "explanation": { "type": "string" }
            }
          }
        }
      }
    },

    "anagram": {
      "type": "object",
      "description": "Letter unscrambling (A1 M01-10 only)",
      "required": ["type", "title", "items"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "anagram" },
        "title": { "type": "string", "minLength": 1 },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["scrambled", "answer"],
            "additionalProperties": false,
            "properties": {
              "scrambled": {
                "type": "string",
                "minLength": 1,
                "description": "Scrambled letters"
              },
              "answer": {
                "type": "string",
                "minLength": 1,
                "description": "Correct word"
              },
              "hint": {
                "type": "string",
                "description": "English translation hint"
              }
            }
          }
        }
      }
    },

    "essay-response": {
      "type": "object",
      "description": "Long-form writing task with model answer and rubric",
      "required": ["type", "title", "prompt", "model_answer"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "essay-response" },
        "title": { "type": "string", "minLength": 1 },
        "prompt": { "type": "string", "minLength": 10 },
        "min_words": { "type": "integer", "minimum": 100 },
        "model_answer": { "type": "string", "minLength": 50 },
        "rubric": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["criteria", "description"],
            "additionalProperties": false,
            "properties": {
              "criteria": { "type": "string", "minLength": 1 },
              "description": { "type": "string", "minLength": 1 },
              "points": { "type": "integer" }
            }
          }
        },
        "peer_review_guidelines": { "type": "string" }
      }
    },

    "critical-analysis": {
      "type": "object",
      "description": "Deep analysis of a text or concept",
      "required": ["type", "title", "target_text", "questions", "model_answers"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "critical-analysis" },
        "title": { "type": "string", "minLength": 1 },
        "target_text": { "type": "string", "description": "The text or excerpt to analyze" },
        "questions": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "model_answers": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "focus_points": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Key elements to analyze (e.g. tone, bias)"
        }
      }
    },

    "comparative-study": {
      "type": "object",
      "description": "Comparison of two or more texts/concepts",
      "required": ["type", "title", "items_to_compare", "criteria", "model_answer"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "comparative-study" },
        "title": { "type": "string", "minLength": 1 },
        "items_to_compare": {
          "type": "array",
          "minItems": 2,
          "items": { "type": "string" },
          "description": "Titles or excerpts of items"
        },
        "criteria": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" },
          "description": "Dimensions of comparison (e.g. style, theme)"
        },
        "prompt": { "type": "string" },
        "model_answer": { "type": "string" }
      }
    },

    "authorial-intent": {
      "type": "object",
      "description": "Evaluation of author's purpose and techniques",
      "required": ["type", "title", "text_excerpt", "prompt", "model_answer"],
      "additionalProperties": false,
      "properties": {
        "type": { "const": "authorial-intent" },
        "title": { "type": "string", "minLength": 1 },
        "text_excerpt": { "type": "string" },
        "prompt": { "type": "string" },
        "techniques_to_identify": {
          "type": "array",
          "items": { "type": "string" }
        },
        "model_answer": { "type": "string" }
      }
    }
  }
}
