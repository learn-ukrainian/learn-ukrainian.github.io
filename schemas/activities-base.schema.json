{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://learn-ukrainian.github.io/schemas/activities-base.schema.json",
  "title": "Activity Definitions (Base)",
  "description": "Shared activity type definitions. Level-specific schemas reference these.",
  "definitions": {
    "quiz": {
      "type": "object",
      "description": "Multiple choice - single correct answer",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "quiz"
        },

        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "question",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "question": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "object",
                  "required": [
                    "text",
                    "correct"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "text": {
                      "type": "string",
                      "minLength": 1
                    },
                    "correct": {
                      "type": "boolean"
                    }
                  }
                }
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "select": {
      "type": "object",
      "description": "Multiple choice - multiple correct answers",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "select"
        },

        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "question",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "question": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 6,
                "items": {
                  "type": "object",
                  "required": [
                    "text",
                    "correct"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "text": {
                      "type": "string",
                      "minLength": 1
                    },
                    "correct": {
                      "type": "boolean"
                    }
                  }
                }
              },
              "min_correct": {
                "type": "integer",
                "minimum": 2
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "true-false": {
      "type": "object",
      "description": "Statement validation - true or false",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "true-false"
        },

        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "statement",
              "correct"
            ],
            "additionalProperties": false,
            "properties": {
              "statement": {
                "type": "string",
                "minLength": 1
              },
              "correct": {
                "type": "boolean"
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "fill-in": {
      "type": "object",
      "description": "Gap fill with dropdown options",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "fill-in"
        },

        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "sentence",
              "answer",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "sentence": {
                "type": "string",
                "minLength": 1,
                "description": "Sentence with ___ marking the blank"
              },
              "answer": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "cloze": {
      "type": "object",
      "description": "Passage with multiple blanks",
      "required": [
        "type",
        "title",
        "passage"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "cloze"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "passage": {
          "type": "string",
          "minLength": 1,
          "description": "Text with inline {correct|opt1|opt2|opt3} format OR numbered {1}, {2} with blanks array"
        },
        "blanks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "answer",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "integer",
                "minimum": 1
              },
              "answer": {
                "type": "string",
                "minLength": 1
              },
              "options": {
                "type": "array",
                "minItems": 3,
                "maxItems": 5,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "match-up": {
      "type": "object",
      "description": "Match pairs (left to right)",
      "required": [
        "type",
        "title",
        "pairs"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "match-up"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "pairs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "left",
              "right"
            ],
            "additionalProperties": false,
            "properties": {
              "left": {
                "type": "string",
                "minLength": 1
              },
              "right": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "group-sort": {
      "type": "object",
      "description": "Sort items into categories",
      "required": [
        "type",
        "title",
        "groups"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "group-sort"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "groups": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "required": [
              "name",
              "items"
            ],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "items": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "unjumble": {
      "type": "object",
      "description": "Reorder words into correct sentence",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "unjumble"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "words",
              "answer"
            ],
            "additionalProperties": false,
            "properties": {
              "words": {
                "type": "array",
                "minItems": 3,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "answer": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "error-correction": {
      "type": "object",
      "description": "Find and fix grammatical errors, register issues, or phrase corrections",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "error-correction"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "sentence",
              "error",
              "answer",
              "options",
              "explanation"
            ],
            "additionalProperties": false,
            "properties": {
              "sentence": {
                "type": "string",
                "minLength": 1
              },
              "error": {
                "type": "string",
                "minLength": 1,
                "description": "The incorrect word or phrase in the sentence"
              },
              "answer": {
                "type": "string",
                "minLength": 1,
                "description": "The correct word or phrase"
              },
              "error_type": {
                "type": "string",
                "enum": ["word", "phrase", "register", "construction"],
                "description": "Type of correction (default: word). Use 'phrase' for multi-word corrections, 'register' for style transformations, 'construction' for grammatical structures."
              },
              "options": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "explanation": {
                "type": "string",
                "minLength": 1,
                "description": "Why the error is wrong and the answer is correct"
              }
            }
          }
        }
      }
    },
    "mark-the-words": {
      "type": "object",
      "description": "Click/mark words matching criteria in passage",
      "required": [
        "type",
        "title",
        "instruction",
        "text"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "mark-the-words"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "instruction": {
          "type": "string",
          "minLength": 1,
          "description": "What words to mark (e.g., 'Mark all nouns')"
        },
        "text": {
          "type": "string",
          "minLength": 1
        },
        "answers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "translate": {
      "type": "object",
      "description": "Translation multiple choice",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "translate"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "source",
              "options"
            ],
            "additionalProperties": false,
            "properties": {
              "source": {
                "type": "string",
                "minLength": 1,
                "description": "Text to translate (usually English)"
              },
              "options": {
                "type": "array",
                "minItems": 3,
                "maxItems": 4,
                "items": {
                  "type": "object",
                  "required": [
                    "text",
                    "correct"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "text": {
                      "type": "string",
                      "minLength": 1
                    },
                    "correct": {
                      "type": "boolean"
                    }
                  }
                }
              },
              "explanation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "anagram": {
      "type": "object",
      "description": "Letter unscrambling (A1 M01-10 only)",
      "required": [
        "type",
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "anagram"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "scrambled",
              "answer"
            ],
            "additionalProperties": false,
            "properties": {
              "scrambled": {
                "type": "string",
                "minLength": 1,
                "description": "Scrambled letters"
              },
              "answer": {
                "type": "string",
                "minLength": 1,
                "description": "Correct word"
              },
              "hint": {
                "type": "string",
                "description": "English translation hint"
              }
            }
          }
        }
      }
    },
    "essay-response": {
      "type": "object",
      "description": "Long-form writing task with model answer and rubric",
      "required": [
        "type",
        "title",
        "prompt",
        "model_answer"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "essay-response"
        },
        "id": {
          "type": "string"
        },
        "source_reading": {
          "type": "string",
          "description": "ID of the reading activity this essay refers to"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "prompt": {
          "type": "string",
          "minLength": 10
        },
        "min_words": {
          "type": "integer",
          "minimum": 100
        },
        "model_answer": {
          "type": "string",
          "minLength": 50
        },
        "rubric": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "criteria",
              "description"
            ],
            "additionalProperties": false,
            "properties": {
              "criteria": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "minLength": 1
              },
              "points": {
                "type": "integer"
              }
            }
          }
        },
        "peer_review_guidelines": {
          "type": "string"
        }
      }
    },
    "critical-analysis": {
      "type": "object",
      "description": "Deep analysis of a text or concept",
      "required": [
        "type",
        "title",
        "target_text",
        "questions",
        "model_answers"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "critical-analysis"
        },
        "id": {
          "type": "string"
        },
        "source_reading": {
          "type": "string",
          "description": "ID of the reading activity this analysis refers to"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "target_text": {
          "type": "string",
          "description": "The text or excerpt to analyze"
        },
        "questions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "model_answers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "focus_points": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Key elements to analyze (e.g. tone, bias)"
        }
      }
    },
    "comparative-study": {
      "type": "object",
      "description": "Comparison of two or more texts/concepts",
      "required": [
        "type",
        "title",
        "items_to_compare",
        "criteria",
        "model_answer"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "comparative-study"
        },
        "id": {
          "type": "string",
          "description": "Unique identifier for the activity"
        },
        "source_reading": {
          "type": "string",
          "description": "ID of the reading activity this comparison refers to"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items_to_compare": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "string"
          },
          "description": "Titles or excerpts of items"
        },
        "criteria": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          },
          "description": "Dimensions of comparison (e.g. style, theme)"
        },
        "prompt": {
          "type": "string"
        },
        "model_answer": {
          "type": "string"
        }
      }
    },
    "authorial-intent": {
      "type": "object",
      "description": "Evaluation of author's purpose and techniques",
      "required": [
        "type",
        "title",
        "text_excerpt",
        "prompt",
        "model_answer"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "authorial-intent"
        },
        "id": {
          "type": "string",
          "description": "Unique identifier for the activity"
        },
        "source_reading": {
          "type": "string",
          "description": "ID of the reading activity this refers to"
        },
        "instruction": {
          "type": "string",
          "description": "Additional instructions for the learner"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "text_excerpt": {
          "type": "string"
        },
        "prompt": {
          "type": "string"
        },
        "techniques_to_identify": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "model_answer": {
          "type": "string"
        }
      }
    },
    "reading": {
      "type": "object",
      "description": "Reading comprehension task with inline text OR external resource",
      "oneOf": [
        {
          "description": "Format 1: Inline primary source text",
          "required": ["type", "title", "text", "tasks"],
          "additionalProperties": false,
          "properties": {
            "type": { "const": "reading" },
            "id": {
              "type": "string",
              "description": "Unique identifier for the activity"
            },
            "instruction": {
              "type": "string",
              "description": "Additional instructions for the learner"
            },
            "title": { "type": "string", "minLength": 1 },
            "source": {
              "type": "string",
              "description": "Attribution (e.g., author, year)"
            },
            "text": {
              "type": "string",
              "minLength": 1,
              "description": "Inline primary source text (Ukrainian)"
            },
            "tasks": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "minLength": 1 }
            }
          }
        },
        {
          "description": "Format 2: External resource link",
          "required": ["type", "title", "resource", "tasks"],
          "additionalProperties": false,
          "properties": {
            "type": { "const": "reading" },
            "id": {
              "type": "string",
              "description": "Unique identifier for the activity"
            },
            "instruction": {
              "type": "string",
              "description": "Additional instructions for the learner"
            },
            "title": { "type": "string", "minLength": 1 },
            "resource": {
              "type": "object",
              "required": ["url"],
              "additionalProperties": false,
              "properties": {
                "type": { "type": "string" },
                "url": { "type": "string" },
                "title": { "type": "string" }
              }
            },
            "tasks": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "minLength": 1 }
            }
          }
        }
            ]
          },
          "etymology-trace": {
            "type": "object",
            "description": "Trace word from OES to modern Ukrainian",
            "required": ["type", "title", "items"],
            "additionalProperties": false,
            "properties": {
              "type": { "const": "etymology-trace" },
              "title": { "type": "string", "minLength": 1 },
              "instruction": { "type": "string" },
              "items": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["word", "modern", "evolution"],
                  "additionalProperties": false,
                  "properties": {
                    "word": { "type": "string", "minLength": 1, "description": "Original OES word" },
                    "modern": { "type": "string", "minLength": 1, "description": "Modern Ukrainian equivalent" },
                    "evolution": { "type": "string", "minLength": 1, "description": "Linguistic explanation of changes" }
                  }
                }
              }
            }
          },
          "transcription": {
            "type": "object",
            "description": "Read and transcribe OES text",
            "required": ["type", "title", "original", "answer"],
            "additionalProperties": false,
            "properties": {
              "type": { "const": "transcription" },
              "title": { "type": "string", "minLength": 1 },
              "instruction": { "type": "string" },
              "original": { "type": "string", "minLength": 1, "description": "OES text to transcribe" },
              "answer": { "type": "string", "minLength": 1, "description": "Correct transcription or modern equivalent" },
              "hints": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Optional hints for the learner"
              }
            }
          },
          "grammar-identify": {
            "type": "object",
            "description": "Identify grammatical forms (Dual, Aorist, etc.)",
            "required": ["type", "title", "items"],
            "additionalProperties": false,
            "properties": {
              "type": { "const": "grammar-identify" },
              "title": { "type": "string", "minLength": 1 },
              "instruction": { "type": "string" },
              "items": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["text", "form", "answer"],
                  "additionalProperties": false,
                  "properties": {
                    "text": { "type": "string", "minLength": 1, "description": "OES excerpt" },
                    "form": { "type": "string", "minLength": 1, "description": "Form to identify" },
                    "answer": { "type": "string", "minLength": 1, "description": "Correct identification" }
                  }
                }
              }
            }
          },
          "paleography-analysis": {
