# .yamllint configuration
extends: default

rules:
  line-length: disable
  document-start: disable
  indentation: disable
  trailing-spaces: disable
  new-line-at-end-of-file: disable
  empty-lines: disable
  braces: disable
  truthy: disable  # Allow 'yes/no' in plans if needed
  comments: disable
  key-duplicates: enable
  colons:
    max-spaces-before: 0
    max-spaces-after: 1

ignore: |
  .venv/
  node_modules/
  docusaurus/node_modules/
  backup/
  docusaurus/pnpm-lock.yaml
