# .yamllint configuration
extends: default

rules:
  line-length: disable
  document-start: disable
  indentation:
    spaces: 2
    indent-sequences: consistent
  truthy: disable  # Allow 'yes/no' in plans if needed
  comments: disable
  comments-indentation: disable
  colons: disable
  braces: disable
  trailing-spaces: disable
  new-line-at-end-of-file: disable
  empty-lines: disable
  key-duplicates: enable

ignore: |
  .venv/
  node_modules/
  docusaurus/node_modules/
  docusaurus/pnpm-lock.yaml
  docs/issues/artifacts/
  backup/
