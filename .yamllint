# .yamllint configuration
extends: default

rules:
  document-start: disable
  line-length: disable
  indentation: disable
  comments: disable
  comments-indentation: disable
  colons: disable
  braces: disable
  trailing-spaces: disable
  new-line-at-end-of-file: disable
  empty-lines: disable
  truthy: disable

ignore:
  - .venv/
  - node_modules/
  - docusaurus/node_modules/
  - docusaurus/pnpm-lock.yaml
  - docs/issues/artifacts/
  - backup/
