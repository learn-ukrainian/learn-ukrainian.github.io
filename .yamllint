# .yamllint configuration
extends: default

rules:
  line-length: disable
  document-start: disable
  indentation:
    spaces: 2
    indent-sequences: consistent
  truthy: disable  # Allow 'yes/no' in plans if needed
  comments:
    min-spaces-from-content: 1
  key-duplicates: enable
  colons:
    max-spaces-before: 0
    max-spaces-after: 1

ignore: |
  .venv/
  node_modules/
  docusaurus/node_modules/
  backup/
  docusaurus/pnpm-lock.yaml
