  "scripts": {
    "test": ".venv/bin/python -m pytest tests/ -v",
    "test:activities": ".venv/bin/python -m pytest tests/test_activities.py -v",
    "test:yaml": ".venv/bin/python -m pytest tests/test_yaml_activities.py -v",
    "test:vocabulary": ".venv/bin/python -m pytest tests/test_vocabulary.py -v",
    "test:pedagogy": ".venv/bin/python -m pytest tests/test_pedagogy.py -v",
    "generate": ".venv/bin/python scripts/generate_mdx.py",
    "generate:validated": ".venv/bin/python scripts/generate_mdx.py --validate",
    "generate:json": ".venv/bin/python scripts/generate_json.py",
    "pipeline": ".venv/bin/python scripts/pipeline.py",
    "validate:mdx": ".venv/bin/python scripts/validate_mdx.py",
    "validate:html": ".venv/bin/python scripts/validate_html.py",
    "validate:yaml": ".venv/bin/python scripts/validate_yaml.py",
    "convert:md-to-yaml": ".venv/bin/python scripts/md_to_yaml.py",
    "vocab:init": "python3 scripts/vocab_init.py",
    "vocab:init:force": "python3 scripts/vocab_init.py l2-uk-en --force",
    "vocab:scan": "python3 scripts/populate_vocab_db.py",
    "vocab:rebuild": "npm run vocab:init:force && npm run vocab:scan",
    "seo:generate": "python3 scripts/generate_seo.py",
    "claude:deploy": "rsync -av claude_extensions/ .claude/ && rsync -av claude_extensions/ .agent/"
  },
