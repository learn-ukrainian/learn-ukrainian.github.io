      "content": {
        "type": "group-sort",
        "instructions": "",
        "groups": [
          {
            "name": "Prefix Creates Perfective",
            "items": [
              "будувати → побудувати",
              "снідати → поснідати",
              "готувати → приготувати",
              "дякувати → подякувати"
            ]
          },
          {
            "name": "Suffix Change (-ува- → -и-)",
            "items": [
              "вирішувати → вирішити",
              "показувати → показати",
              "запрошувати → запросити",
              "відповідати → відповісти"
            ]
          },
          {
            "name": "Different Roots",
            "items": [
              "брати → взяти",
              "говорити → сказати",
              "шукати → знайти"
            ]
          }
        ],
        "shuffleItems": true
      },
